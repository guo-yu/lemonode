doctype 5
html(ng-app="lemonAdmin")
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/admin.css')
    //- script(src="http://static.alipayobjects.com/seajs/1.3.1/??sea.js,plugin-combo.js",id="seajsnode",charset="utf-8")
    script(src="/javascripts/lib/angular.min.js")
    //- script(src="/javascripts/lib/angular-resource.min.js")
    script(src="/javascripts/store.js")
  body
    #admin(ng-controller="lemonCtrlers.main")
        .hd.fn-clear
          .container
            h1.fn-left 欢迎，这是 {{setting.name}} 的后台
            .admin-tab
                .ui-tab
                    ul.ui-tab-items
                        li.ui-tab-item.ui-tab-item-current
                            a(href="#") 网站概览
                        li.ui-tab-item
                            a(href="#") 文章管理
                        li.ui-tab-item
                            a(href="#") 目录管理
                        li.ui-tab-item
                            a(href="#") 媒体管理
                        li.ui-tab-item
                            a(href="#") 站点设置
        .content.fn-clear
            block content
        .footer
            .container.fn-clear
                | &copy; 2012 {{setting.name}} powered by {{system.name}} @ {{system.version}}
        block js