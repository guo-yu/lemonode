extends layout

block content
  .container.fn-clear
    .ui-grid-row
        .ui-grid-25
            .ui-form(ng-controller="lemonCtrlers.post")
                form#lemonAdminPost
                    fieldset
                        .ui-form-item
                            label.ui-label 文章标题
                            input(type="text",ng-model="post.title").ui-input
                        .ui-form-item
                            label.ui-label 文章内容
                            textarea(type="text",ng-model="post.body").ui-input.ui-ta
                        .ui-form-item.button-group
                            a.ui-button.ui-button-morange(href="#submit",ng-click="postNew()") 写好了
                            input.ui-button.ui-button-mwhite(type="button",value="算了")
            .ui-box
                .ui-box-head
                    .ui-box-head-border
                        .ui-box-head-title 站点信息设置
                        .ui-box-head-text
                        a.ui-box-head-more 更多
                .ui-box-container
                    .ui-box-content
                        .ui-form(name="editSetting")
                            fieldset
                                .ui-form-item
                                    label.ui-label 站点名称
                                    input(type="text",ng-model="setting.name").ui-input
                                    //- span.ui-form-other 提示
                                .ui-form-item
                                    label.ui-label icp备案号
                                    input(type="text",ng-model="setting.icp").ui-input
                                    //- span.ui-form-other 提示
                                .ui-form-item
                                    label.ui-label 联系电话
                                    input(type="text",ng-model="setting.phone").ui-input
                                    //- span.ui-form-other 提示
                                .ui-form-item
                                    label.ui-label 传真号
                                    input(type="text",ng-model="setting.fax").ui-input
                                    //- span.ui-form-other 提示
                                .ui-form-item
                                    label.ui-label 地址
                                    input(type="text",ng-model="setting.adr").ui-input
                                    //- span.ui-form-other 提示
                                .ui-form-item
                                    label.ui-label 邮箱
                                    input(type="text",ng-model="setting.email").ui-input
                                    //- span.ui-form-other 提示
                                .ui-form-item.button-group
                                    a.ui-button.ui-button-morange(href="javascript:'';",ng-click="update.setting()") 提交修改
                                    input.ui-button.ui-button-mwhite(type="button",value="算了")
            .ui-box
                .ui-box-head
                    .ui-box-head-border
                        .ui-box-head-title 所有文章
                        .ui-box-head-text
                .ui-box-container
                    .ui-box-content.posts
                        table.ui-table.ui-table-noborder
                            tbody
                                tr(ng-repeat="post in postlist")
                                    td 
                                        input(class="test",value="",type="checkbox")
                                    td
                                        p {{post.name}}
                                        p {{post.author}} @ {{post.pubdate}}
                                    td.action
                                        p 
                                            a(href="#").ui-button.ui-button-swhite
                                                i.icon-edit
                                                | 编辑
                                        p 
                                            a(href="#").ui-button.ui-button-swhite
                                                i.icon-trash
                                                | 删除
                        .ui-paging.fn-clear
                            span.ui-paging-info
                                | 第
                                span.ui-paging-bold 1/2
                                | 页
                            a.ui-paging-prev(href="#")
                                i.iconfont(title="左三角形") &#xF039;
                                | 上一页
                            a.ui-paging-prev(href="#")
                                i.iconfont(title="左三角形") &#xF03A;
                                | 上一页

block js
    //- 图片上传部分
    script(src="/javascripts/upload/vendor/jquery.ui.widget.js")
    script(src="/javascripts/upload/jquery.iframe-transport.js")
    script(src="/javascripts/upload/load-image.min.js")
    script(src="/javascripts/upload/canvas-to-blob.min.js")
    script(src="/javascripts/upload/jquery.fileupload.js")
    script(src="/javascripts/upload/jquery.fileupload-fp.js")
    script(src="/javascripts/upload.js")
    //- 应用部分
    script(src="/javascripts/admin/index.js")